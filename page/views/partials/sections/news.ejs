<h2>News &amp; Events</h2>
<button class="btn notification news">Enable News Push Notifications</button></br></br>
<% news.forEach((item,index) => {if(index < 3) { %>
    <h3>
      <%= item.title %>
        <div class="date">
          <%= moment(item.date).format("DD-MM-YYYY") %>
        </div>
    </h3>
    <% if(item.imagelink != "") {%>
      <img alt="Image of <%= item.title %>" class="newsimg lazyload" data-src="<%= item.imagelink %>" />
      <%}%>
        <p>
          <%- item.text %>
        </p>
        <a class="btn" href="<%= item.link%>" target="_blank">
          <% if(item.event) {%>
            Sign up
            <% } else { %>
              Read More
              <%}%>
        </a>
        <hr>
<% }}) %>
<a class="btn" href="http://forums.iron-fists.co.uk/index.php" target="_blank">View More</a>