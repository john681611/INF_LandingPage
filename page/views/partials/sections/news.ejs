<div class="row">
    <div class="col-lg-8 col-lg-offset-2">
      <h2>News &amp; Events</h2>
      <% for(var i=(news.length-1); i>=(news.length-3) && i>=0; i--) { %>
        <hr />
        <div>
          <h3><%= news[i].title %></h3>
          <span class="right"><%= news[i].date%></span>
          <% if(news[i].imagelink != "") {%>
            <img class="newsimg" src="<%= news[i].imagelink %>"/>
          <%}%>
          <p><%- news[i].text %></p>
          <a class="btn btn-default btn-lg" href="<%= news[i].link%>" target="_blank">
            <% if(news[i].event) {%>
            Sign up
            <% } else { %>
            Read More
            <%}%>
          </a>
        </div>
      <% } %>
    <hr />
    <a class="btn btn-default btn-lg" href="http://forums.iron-fists.eu/index.php" target="_blank">View More</a>
    </div>
</div>