{
    "extends": "eslint-config-mns-core/ecma-config",
    "rules": {
        "eqeqeq": ["error", "smart"],
        "func-style":["error", "declaration", { "allowArrowFunctions": true }]
    },
    "env": {
        "commonjs": true,
        "mocha": true
    },
    "globals": {
        "expect": true,
        "sinon": true,
        "browser": true,
        "Zone": true
    },
    "parserOptions" : {
        "ecmaFeatures" : {
            "experimentalObjectRestSpread" : true
        }
    }
}